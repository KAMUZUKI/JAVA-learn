<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ResponseDemo</servlet-name>
        <servlet-class>com.example.Response.ResponseDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResponseDemo</servlet-name>
        <url-pattern>/codeDemo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RefreshDemo</servlet-name>
        <servlet-class>com.example.Response.RefreshDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RefreshDemo</servlet-name>
        <url-pattern>/refresh</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>redirectDemo01</servlet-name>
        <servlet-class>com.example.Response.RedirectDemo01</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>redirectDemo01</servlet-name>
        <url-pattern>/redirectDemo01</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>redirectDemo02</servlet-name>
        <servlet-class>com.example.Response.RedirectDemo02</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>redirectDemo02</servlet-name>
        <url-pattern>/redirectDemo02</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DownloadDemo</servlet-name>
        <servlet-class>com.example.Response.DownloadDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadDemo</servlet-name>
        <url-pattern>/downloadDemo</url-pattern>
    </servlet-mapping>
</web-app>